<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".XacNhanDonHangActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="left">
            <ImageView
                android:id="@+id/back2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_arrow_back_black_24dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="right"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="XÁC NHẬN ĐƠN HÀNG"
        android:textSize="23dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans_bold">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giao tận nơi"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp">
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtDiaChi"
                android:layout_width="381dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:ems="12"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="left"
                android:hint="Địa chỉ nhận"
                android:lineSpacingExtra="1dp"
                android:lines="2"
                android:maxLines="2"
                android:textSize="17dp">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edtGhiChu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:hint="Thêm ghi chú"
                android:textSize="15dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:layout_weight="1"
                >

                <TextView
                    android:id="@+id/tvHoTen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:ems="7"
                    android:gravity="left"
                    android:lineSpacingExtra="1dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="Trần Thị Ngọc Thảo"
                    android:textSize="18dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:ems="7"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="left"
                    android:lineSpacingExtra="1dp"
                    android:lines="1"
                    android:maxLines="1"
                    android:text="0978154394"
                    android:textSize="16dp">

                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="------------------------------------------------------------------------"
                    android:textSize="10dp"
                    android:textStyle="bold"
                   >

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="|"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="|"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="|"
                    android:textStyle="bold">
                </TextView>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15-30 phút"
                    android:textSize="16dp"
                    android:layout_marginBottom="5dp"
                    android:ems="7"
                    android:gravity="left"
                    android:lineSpacingExtra="1dp"
                    android:lines="1"
                    android:maxLines="1">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Càng sớm càng tốt"
                    android:textSize="17dp"
                    android:layout_marginBottom="5dp"
                    android:ems="7"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="left"
                    android:lineSpacingExtra="1dp"
                    android:lines="1"
                    android:maxLines="1">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="------------------------------------------------------------------------"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    >

                </TextView>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Các món đã chọn"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="left"
                android:lineSpacingExtra="1dp">

            </TextView>


            <TextView
                android:id="@+id/linkDelAll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="right"
                android:lineSpacingExtra="1dp"
                android:text="Xoá tất cả"
                android:textColor="@color/blue_deep"
                android:textSize="15dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:id="@+id/lst_CartTT"
                android:layout_width="match_parent"
                android:layout_height="242dp">

            </ListView>
        </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"

        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"

                    android:text="Tổng tiền  :  "
                    android:textColor="@color/red_basic"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_Cart_Total"
                    android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="0 VND"
                    android:textColor="@color/red_basic"
                    android:textSize="20dp" />
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    <Button

        android:id="@+id/btn_Cart_Pay"
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="10dp"
        android:text="Đặt hàng"
        android:textStyle="bold"
        android:backgroundTint="@color/orange"
        android:layout_gravity="center"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />



</LinearLayout>