<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp">


    <TextView
        android:id="@+id/txt_NgayDH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="2021-07-09"
        android:textSize="18dp"
        android:layout_marginTop="4dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/txt_TextSL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_NgayDH"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="20dp"
        android:text="Trạng thái: "
        android:fontFamily="@font/open_sans"/>
    <TextView
        android:id="@+id/txt_TrangThai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_TextSL"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:text="Đã giao hàng"
        android:fontFamily="@font/open_sans_bold"
        android:textStyle="bold"/>
    <View
        android:background="#e3e8e8"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignLeft="@id/txt_NgayDH"
        android:layout_below="@id/txt_DiaChi"
        android:layout_marginTop="2dp"/>


    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:textSize="18dp"
        android:textColor="@color/red_basic"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/txt_TrangThai"
        android:text="50000" />
    <TextView
        android:id="@+id/txt_TextVND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt_price"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:textColor="@color/red_basic"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="VND" />

    <TextView
        android:id="@+id/txt_DiaChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_NgayDH"
        android:layout_below="@id/txt_price"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/open_sans_bold"
        android:layout_marginBottom="5dp"
        android:ems="20"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:drawableLeft="@drawable/ic_account"
        android:text="102 Nguyễn Quý Anh, Tân Sơn Nhì, Tân Phú" />

</RelativeLayout>
